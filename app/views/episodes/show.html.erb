<div class="episodeBody">
  <h1>Episode <%=@episode.name%></h1>
  <% @links.each do |l| %>
    <h2><%=l.typeLink%></h2>
    <iframe src=<%=l.url%> scrolling="no" frameborder="0" width="700" height="430" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true"> </iframe>
  <% end %>
</div>
<div class="episodeFooter">
  <% if @prev != nil %>
    <%= link_to "<< prev", @prev, class: "badge badge-pill badge-dark posLeft" %>
  <% end %>

  <% if @next != nil %>
    <%= link_to "next >>", @next, class: "badge badge-pill badge-dark posRight" %>
  <% end %>
</div>
